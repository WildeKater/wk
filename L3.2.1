/*
 *1) Есть круг с центром в начале координат и радиусом 4. Пользователь
 *вводит с клавиатуры координаты точки x и y. Написать программу которая
 *определит лежит ли эта точка внутри круга или нет.
 */

package com.gmail.wildekatertz;

import static java.lang.Math.*;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		float x;
		float y;

		System.out.println("Введите координаты (x,y) точки");
		x = sc.nextFloat();
		y = sc.nextFloat();

		if ((sqrt(pow((x - 0), 2) + pow((y - 0), 2))) < 4.0) {
			System.out.println("Точка внутри круга");
		} else {
			System.out.println("Точка за пределами круга");
		}

	}

}
