/*
 *2) Вычислить с помощью цикла факториал числа - n введенного с
 *клавиатуры (4<n<16). Факториал числа это произведение всех чисел от
 *этого числа до 1. Например 5!=5*4*3*2*1=120
 */

package com.gmail.wildekatertz;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);

		int numeric;
		System.out.println("Введите число ");
		numeric = sc.nextInt();

		if ((numeric > 4) & (numeric < 16)) {
			int numericFactorial = 1;
			for (int i = 1; i <= numeric; i++) {
				numericFactorial = numericFactorial * i;
			}
			System.out.println("Факториал числа " + numeric + " равен " + numericFactorial);
		} else {
			System.out.println("Число не в промежутке 4<n<16 ");
		}

	}

}
