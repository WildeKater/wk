/*
 *3) Ввести с консоли число в бинарном формате. Перевести его в
 *десятичный и вывести на экран (“10” -> 2).
 */

package com.gmail.wildekatertz;

import java.util.Scanner;
import java.lang.Math;

public class Main {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		System.out.println("Введите число в бинарном формате");
		String binarNumeric = sc.nextLine();
		
		binarNumeric = binarNumeric.replace(" ", "");
		
		boolean test = true;
		char[] charNumeric = binarNumeric.toCharArray();		
		int[] intNumeric = new int[binarNumeric.length()];
		
		for (int i = 0; i < charNumeric.length; i++) {
			if ((charNumeric[i] == '0') || (charNumeric[i] == '1')) {
				intNumeric[i] = Character.getNumericValue(charNumeric[i]);
			} else {
				test = false;
				break;
			}
		}

		int nnnumeric = 0;

		if (test) {
			for (int i = 0; i < intNumeric.length; i++) {
				nnnumeric = nnnumeric + intNumeric[i] * ((int) Math.pow(2, intNumeric.length - 1 - i));
			}
			System.out.println(binarNumeric + " -> " + nnnumeric);
		}else {
			System.out.println("Введённое значение не является числом в бинарном формате");
		}


	}

}
