/*
 *4) С клавиатуры вводиться шестизначное число. Проверить, является ли
 *оно палиндромом. Примечание: палиндромом называется число, слово
 *или текст, которые одинакового читаются слева направо и справа налево.
 *Например, это числа 143341, 5555, 7117 и т. д.
 */

package com.gmail.wildekatertz;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);

		int numeric;
		System.out.println("Введите число");
		numeric = sc.nextInt();

		/*
		 * Далее временные переменные s1 и s2 для проверки палиндромности через String
		 */

		String s1 = Integer.toString(numeric);

		String s2;
		s2 = String.valueOf(s1.charAt(5));
		s2 = s2.concat(String.valueOf(s1.charAt(4)));
		s2 = s2.concat(String.valueOf(s1.charAt(3)));
		s2 = s2.concat(String.valueOf(s1.charAt(2)));
		s2 = s2.concat(String.valueOf(s1.charAt(1)));
		s2 = s2.concat(String.valueOf(s1.charAt(0)));

		if (Integer.parseInt(s1) == Integer.parseInt(s2)) {
			System.out.println("Число палиндром");
		} else {
			System.out.println("Число не палиндром");
		}

	}

}
